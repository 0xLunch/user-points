{
    // load nix-shell dev environment
    "nixEnvSelector.suggestion": false,
    // use golines for formatting long lines
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.go$",
                "cmd": "golines ${file} -w"
            }
        ]
    },
    "nixEnvSelector.nixFile": "${workspaceFolder}/shell.nix"
}